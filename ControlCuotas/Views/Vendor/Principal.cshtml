@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/fonts/styles/styleTitle.css" rel="stylesheet" />

<div class="card">
    <div id="titleDiv" class="card-body" style="color:black; background-color:cadetblue; font-family:fantasy; font-size:xx-large">
        VENDEDORES
    </div>
</div>
<br />
<div class="card-body">

    <button id="btnModal" type="button" class="btn btn-primary" onclick="showModalAddVendor()"><i class="fas fa-arrow-circle-right"></i> Agregar Vendedor </button>
</div>
<br />
<div>
    <div class="table-responsive">
        <table id="tblVendor" class="table table-striped table-bordered" style="color: black; text-align:left; ">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nombre y apellido</th>
                    <th scope="col">DNI</th>
                    <th scope="col">Fecha nacimiento</th>
                    <th scope="col">Modificar</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
        </table>
    </div>

</div>

<!-- Modal -->

<div class="modal fade" id="ModifyVendorModal">
    <div class="modal-dialog" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar Vendedor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">

                    <table id="tblModify" class="table" style="color:black">

                        <tbody style="text-align:left">

                            <tr>
                                <th>Nombre y apellido</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtName" type="text">
                                </td>
                                <td>
                                    <input id="txtIdVendor" type="text" style="display:none" />
                                </td>
                            </tr>
                            <tr>
                                <th>DNI</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDNI" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Fecha nacimiento</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtBirthday" type="date">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="ModifyVendor();"><i class="fas fa-savet"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="AddVendorModal">
    <div class="modal-dialog" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Vendedor</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblAddVendor" class="table" style="color:black">
                        <tbody style="text-align:left">
                            <tr>
                                <th>Nombre y apellido</th>
                                <td>

                                    <input style="max-width:100%" class="form-control" id="txtNameAdd" type="text">
                                </td>

                            </tr>
                            <tr>
                                <th>DNI</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDNIAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Fecha nacimiento</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtBirthdayAdd" type="date">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="AddVendor();"><i class="fas fa-savet"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

<!--END MODAL-->

