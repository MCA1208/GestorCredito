<div class="card">
    <div id="titleDiv" class="card-body" style="color:black; background-color:cadetblue; font-family:fantasy; font-size:xx-large; text-align: center">
        VENTAS DE PRODUCTOS
    </div>
</div>
<br />
<div class="card-body">
    <button id="btnModal" type="button" class="btn btn-primary" onclick="showModalAddProyect()"><i class="fas fa-arrow-circle-right"></i> Agregar préstamo </button>
</div>
<br />
<div>

    <div class="table-responsive">
        <br />
        <table id="tblProductSale" class="table table-bordered table-striped table-hover" style="color: black; text-align:left; ">

            <thead class="thead-light">
                <tr>
                    <th scope="col">N° Venta</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Monto</th>
                    <th scope="col">Monto a cobrar</th>
                    <th scope="col">Cantidad de cuotas</th>
                    <th scope="col">Fecha de Inicio</th>
                    <th scope="col">Fecha de Fin</th>
                    <th scope="col">Vendedor</th>
                    <th scope="col">Modificar Venta</th>
                    <th scope="col">Modificar Cuotas</th>
                    <th scope="col">Elimnar</th>
                </tr>
            </thead>
        </table>
    </div>

</div>

<!-- Modal -->


<div class="modal fade" id="EditSaleModal">
    <div class="modal-dialog" role="document" style="max-width:80%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="editCuotaPrestamo">Editar Cuotas de Préstamo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <input id="txtIdSale1" type="text" style="display:none" />
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblSaleDetail" class="table-responsive" style="color: black; text-align:left; ">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">N° Cuota</th>
                                <th scope="col">Importe</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Fecha de Modificación</th>
                                <th scope="col">Pagó</th>
                                <th scope="col">Monto que pagó</th>
                                <th scope="col">Módificar</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                @*<button type="button" class="btn btn-primary" onclick="AddPrestamo();"><i class="fas fa-save"></i> Guardar</button>*@
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="EditCuotaModal">
    <div class="modal-dialog" role="document" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="titleCuota">Editar Cuota de: </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <input id="txtIdCuota" type="text" style="display:none" />
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblEditSale" class="table" style="color:black">
                        <tbody style="text-align:left">
                            <tr>
                                <th>Fecha</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtFechaCuota" type="date">
                                </td>
                            </tr>
                            <tr>
                                <th>pago</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtObservation" type="number">
                                </td>
                            </tr>
                            <tr>
                                <th>Observación de pago parcial</th>
                                <td>
                                    @*<textarea name="textarea" rows="10" cols="50">Write something here</textarea>*@
                                    <textarea style="max-width:100%" rows="10" class="form-control" id="txtObservationPartial" type="text"></textarea>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="SaveCuotaForId();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="EditSaleDateModal">
    <div class="modal-dialog" role="document" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="h5Title">Editar Venta: </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <input id="txtIdSale" type="text" style="display:none" />
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblEditPrestamoDate" class="table" style="color:black">
                        <tbody style="text-align:left">
                            <tr>
                                <th>Fecha Inicio</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDateStartSale" type="date">
                                </td>
                            </tr>
                            <tr>
                                <th>Fecha Fin</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDateEndSale" type="date">
                                </td>
                            </tr>
                            <tr>
                                <th>Vendedor</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboVendorEdit" style="width: 100%; height:36px;"> </select>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="SaveSaleById();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

