
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/fonts/styles/styleTitle.css" rel="stylesheet" />

<div class="card">
    <div id="titleDiv" class="card-body" style="color:black; background-color:cadetblue; font-family:fantasy; font-size:xx-large">
        ARTICULOS
    </div>
</div>
<br />
<div class="card-body">

    <button id="btnModal" type="button" class="btn btn-primary" onclick="showModalAddProduct()"><i class="fas fa-arrow-circle-right"></i> Agregar articulo </button>
</div>
<br />
<div>
    <div class="table-responsive">
        <table id="tblProduct" class="table table-striped table-bordered" style="color: black; text-align:left; ">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo de articulo</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Precio costo</th>
                    <th scope="col">Precio venta</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Modificar</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
        </table>
    </div>

</div>

<!-- Modal -->

<div class="modal fade" id="ModifyProductModal">
    <div class="modal-dialog" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar producto</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">

                    <table id="tblModify" class="table" style="color:black">

                        <tbody style="text-align:left">

                            <tr>
                                <th>Nombre</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtName" type="text">
                                </td>
                                <td>
                                    <input id="txtIdProduct" type="text" style="display:none" />
                                </td>
                            </tr>
                            <tr>
                                <th>Tipo de producto</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboTypeProduct" style="width: 100%; height:36px;"> </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Marca</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboMark" style="width: 100%; height:36px;"> </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Precio costo</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtCostPrice" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Precio venta</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtSalePrice" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Stock</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtStock" type="text">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="ModifyProduct();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="AddProductModal">
    <div class="modal-dialog" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar articulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="tblAddProduct" class="table" style="color:black">
                        <tbody style="text-align:left">
                            <tr>
                                <th>Nombre</th>
                                <td>

                                    <input style="max-width:100%" class="form-control" id="txtNameAdd" type="text">
                                </td>

                            </tr>
                            <tr>
                                <th>Tipo de producto</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboTypeProductAdd" style="width: 100%; height:36px;"> </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Marca</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboMarkAdd" style="width: 100%; height:36px;"> </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Precio costo</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtCostPriceAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Precio venta</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtSalePriceAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Stock</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtStockAdd" type="text">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="AddProduct();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

<!--END MODAL-->

