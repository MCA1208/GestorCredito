<div class="card">
    <div id="titleDiv" class="card-body" style="color:black; background-color:cadetblue; font-family:fantasy; font-size:xx-large; text-align: center">
        CUPÓN DE COBRANZA
    </div>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-md-4 card-body">
            <label>Zona: </label>
            <select class="select2 form-control custom-select" id="cboZona" style="width: 100%; height:36px;"> </select>
        </div>
        <div class="col-md-4 card-body" style="padding:20px;">
            <label>Fecha desde: </label>
            <input id="dateStart" type="date" />
        </div>
        <div class="col-md-4 card-body" style="padding:20px;">
            <label>Fecha hasta: </label>
            <input id="dateEnd" type="date" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="SearchReportCobranza();"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </div>
</div>
<br />
<div id="areaPrint">
    <table id="" class="table" style="color:black">
        <tbody style="text-align:left">
            <tr>
                <th colspan="8" style="text-align:center">CUPÓN DE COBRANZAS</th>
            </tr>            
            <tr>
                <th class="col-sm-2">Zona:</th>
                <td class="col-sm-2">
                    <label id="lblZona"></label>
                </td>
                <th class="col-sm-2">Cantidad de Cupones:</th>
                <td class="col-sm-2">
                    <label id="lblCant"></label>
                </td>
                <th class="col-sm-2">Importe total Cupón:</th>
                <td class="col-sm-2">
                    <label id="lblTotal"></label>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="table-responsive">
        <table id="tblReportCobranza" class="table table-striped table-bordered" style="color: black; text-align:left; ">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Número prestamo</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Importe</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Detalle</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="container" style="display:flex; justify-content:center">
    <button id="btnPrint" style="display:none" type="button" class="btn btn-primary" onclick="printDiv();"><i class="fas fa-print"></i> Imprimir</button>
</div>


