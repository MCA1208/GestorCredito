<link href="~/fonts/styles/styleTitle.css" rel="stylesheet" />

<div class="card">
    <div id="titleDiv" class="card-body" style="color:black; background-color:cadetblue; font-family:fantasy; font-size:xx-large; text-align: center">
        RESUMEN DE CUENTA
    </div>
</div>

<div class="card-body">
    <div class="row">
        <div class="col-md-4 card-body">
            <label>Cliente: </label>
            <select class="select2 form-control custom-select" id="cboCliente" style="width: 100%; height:36px;"> </select>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="SearchSummaryClient();"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </div>
</div>
<br />
<div>
    <div class="table-responsive">
        <table id="tblReportSummaryClient" class="table table-striped table-bordered" style="color: black; text-align:left; ">
            <thead class="thead-light">
                <tr>
                    <th scope="col">N° Préstamo</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Fecha inicio</th>
                    <th scope="col">Fecha fin</th>
                    <th scope="col">Total</th>
                    <th scope="col">Pagado</th>
                    <th scope="col">Saldo</th>
                    <th scope="col">Cuo</th>
                    <th scope="col">Vista previa</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal -->

<div class="modal fade" id="PrintSummaryModal">
    <div class="modal-dialog" style="max-width:100%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="">Pre visualización de resumen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="areaPrint" class="table-responsive">
                    <table class="table" style="color: black; text-align:left; ">        
                        <tr>
                            <th colspan="2" style="text-align:center">Resumen de cuenta</th>
                        </tr>
                        <tr>
                            <th scope="col">CREDI-TO</th>
                            <th scope="col">E-Mail: cliente@credi-to.com.ar</th>
                        </tr>
                    </table>
                    <table id="" class="table" style="color:black">

                        <tbody style="text-align:left">
                            <tr>
                                <th class="col-sm-4">Número de préstamo:</th>
                                <td>
                                    <label id="lblNumero"></label>
                                </td>
                                <th class="col-sm-4">Fecha inicio:</th>
                                <td>
                                    <label id="lblDateStart"></label>
                                </td>
                            </tr>
                            <tr>
                                <th class="col-sm-4">Cliente:</th>
                                <td>
                                    <label id="lblCliente"></label>
                                </td>
                                <th class="col-sm-4">Fecha Fin:</th>
                                <td>
                                    <label id="lblDateEnd"></label>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                    <div class="table-responsive">
                        <table id="tblSummaryDetail" class="table" style="color: black; text-align:left; ">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Cuota</th>
                                    <th scope="col">Estado de pago</th>
                                    <th scope="col">Fecha de pago</th>
                                    <th scope="col">Monto</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <table class="table">
                        <tbody style="text-align:left">
                            <tr>
                                <th>Total:</th>
                                <td><p id="pTotal"></p></td>
                                <th>Pagado:</th>
                                <td><p id="pPagado"></p></td>
                                <th>Saldo:</th>
                                <td><p id="pSaldo"></p></td>
                                <th>Cu:</th>
                                <td><p id="pCuota"></p></td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="printDiv();"><i class="fas fa-print"></i> Imprimir</button>
            </div>
        </div>
    </div>
</div>

@*fin modal*@

