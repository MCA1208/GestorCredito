@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/fonts/styles/styleTitle.css" rel="stylesheet" />

<div class="card">
    <div id="titleDiv" class="card-body" style="color:black; background-color:cadetblue; font-family:fantasy; font-size:xx-large">
        CLIENTES
    </div>
</div>
<br />
<div class="card-body">
    @*<button id="btnModal" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModifyProfileModal"><i class="fas fa-arrow-circle-right"></i> Modifical Perfil </button>*@
    <button id="btnModal" type="button" class="btn btn-primary" onclick="showModalAddClient()"><i class="fas fa-arrow-circle-right"></i> Agregar Cliente </button>
</div>

<div>
    <div class="table-responsive">
        <table id="tblClient" class="table" style="color: black; text-align:left; ">
            <thead class="thead-light">
                <tr>
                    <th scope="col">N° Cliente</th>
                    <th scope="col">Nombre y apellido</th>
                    <th scope="col">DNI</th>
                    <th scope="col">Domicilio</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Fecha nacimiento</th>
                    <th scope="col">Estado civil</th>
                    <th scope="col">Nombre conyuge</th>
                    <th scope="col">DNI conyuge</th>
                    <th scope="col">Zona</th>
                    <th scope="col">Cant. Prestamo</th>
                    <th scope="col">Situación crediticia</th>
                    <th scope="col">Modificar</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
        </table>
    </div>

</div>

<!-- Modal -->

<div class="modal fade" id="ModifyClientModal">
    <div class="modal-dialog" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">

                    <table id="tblModify" class="table" style="color:black">

                        <tbody style="text-align:left">
                            <tr>
                                <th>Nombre y apellido</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtName" type="text">
                                </td>
                                <td>
                                    <input id="txtIdClient" type="text" style="display:none" />
                                </td>
                            </tr>
                            <tr>
                                <th>DNI</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDNI" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Domicilio</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtAddress" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Telefono</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtPhone" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Fecha nacimiento</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtbirthDate" type="date">
                                </td>
                            </tr>
                            <tr>
                                <th>Casado</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtMarried" type="checkbox">
                                </td>
                            </tr>
                            <tr>
                                <th>Nombre conyuge</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtConyuge" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>DNI conyuge</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDniConyuge" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Situación crediticia</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboSitcred" style="width: 100%; height:36px;">
                                        <option value="1">Bueno</option>
                                        <option value="2">Medio</option>
                                        <option value="3">Malo</option>
                                    </select>
                                </td>
                            </tr>

                            <tr>
                                <th>Zona</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboZona" style="width: 100%; height:36px;"> </select>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="ModifyClient();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="AddClientModal">
    <div class="modal-dialog" style="max-width:60%">
        <div class="modal-content" style="color:black">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">

                    <table id="tblAddClient" class="table" style="color:black">

                        <tbody style="text-align:left">
                            <tr>
                                <th>Nombre y Apellido</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtNameAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>DNI</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDNIAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Domicilio</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtAddressAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Telefono</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtPhoneAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Fecha Nacimiento</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtbirthDateAdd" type="date">
                                </td>
                            </tr>
                            <tr>
                                <th>Casado</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtMarriedAdd" type="checkbox">
                                </td>
                            </tr>
                            <tr>
                                <th>Nombre Conyuge</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtConyugeAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>DNI Conyuge</th>
                                <td>
                                    <input style="max-width:100%" class="form-control" id="txtDniConyugeAdd" type="text">
                                </td>
                            </tr>
                            <tr>
                                <th>Situación crediticia</th>
                                <td>
                                    <select class="select2 form-control custom-select" id="cboSitcredAdd" style="width: 100%; height:36px;">
                                        <option value="1">Bueno</option>
                                        <option value="2">Medio</option>
                                        <option value="3">Malo</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Zona</th>
                                <td>
                                    @*<input style="max-width:100%" class="form-control" id="txtZonaAdd" type="text">*@
                                    <select class="select2 form-control custom-select" id="cboZonaAdd" style="width: 100%; height:36px;"> </select>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-window-close"></i> Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="AddClient();"><i class="fas fa-save"></i> Guardar</button>
            </div>
        </div>
    </div>
</div>

